<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1FFFFFFF">
    <item android:id="@android:id/mask" android:right="-20dp" android:left="-20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:right="-1dp" android:left="-1dp">
        <shape android:shape="rectangle">
            <padding android:left="8dp" android:right="8dp" android:bottom="8dp" android:top="8dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.1dp" android:color="#d8d8d8"/>
        </shape>
    </item>
</ripple>